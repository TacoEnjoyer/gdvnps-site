---
import Layout from '../layouts/Layout.astro'
import { BlurBG } from '@components/index'
---

<Layout
  title="GDVNPS - Geometry Dash Viet Nam Private Server"
  desc="Trang web chính thức của GDVNPS"
>
  <div class="pt-20">
    <main class="relative z-10 flex flex-1 flex-col">
      <section class="relative">
        <div
          class="mx-auto mt-32 flex w-full flex-col items-center justify-center gap-5 px-4 sm:max-w-screen-md sm:px-8 md:mt-20 md:gap-6 lg:mt-24 lg:gap-8"
        >
          <div class="flex flex-col items-center">
            <h1
              class="mb-4 text-balance bg-gradient-to-br from-yellow-500 to-red-600 bg-clip-text text-center font-bevnpro text-3xl/[1.1] font-bold tracking-wide text-transparent sm:max-w-[24ch] md:text-4xl/[1.1] xl:text-5xl/[1.1]"
            >
              <div>Chào mừng bạn đến với</div>
              <div
                class="pt-2 text-5xl/[1.1] md:text-6xl/[1.1] xl:text-7xl/[1.1]"
              >
                GDVNPS
              </div>
            </h1>
          </div>
          <h1 class="font-bevnpro">Mọi khoản phí đóng góp xin hãy gửi vào:</h1>
          <div
            class="mx-5 mt-4 rounded-xl bg-gradient-to-tr from-blue-800 to-red-700 p-5 font-bevnpro"
          >
            <h1>Vietinbank: 106803956888</h1>
          </div>
          <p class="font-bevnpro">Cảm ơn vì đã đóng góp và chơi GDVNPS!</p>
        </div>
      </section>
      <BlurBG />
    </main>
  </div>
</Layout>
