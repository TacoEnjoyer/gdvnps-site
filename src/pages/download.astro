---
import Layout from '../layouts/Layout.astro'
import { CircleBG } from '@components/index'
import 'primeicons/primeicons.css'
import { BlurBG } from '@components/index'
---

<Layout title="GDVNPS - Tải xuống">
  <div class="pt-16">
    <main class="relative z-10 flex flex-1 flex-col">
      <section class="relative">
        <div
          class="mx-auto mt-32 flex w-full flex-col items-center justify-center gap-5 px-4 sm:max-w-screen-md sm:px-8 md:mt-20 md:gap-6 lg:mt-24 lg:gap-8"
        >
          <div class="flex flex-col items-center">
            <h1
              class="text-balance bg-gradient-to-br from-yellow-500 to-red-600 bg-clip-text text-center font-bevnpro text-4xl/[1.1] font-bold tracking-wide text-transparent sm:max-w-[24ch] md:text-5xl/[1.1] xl:text-6xl/[1.1]"
            >
              Tải xuống GDVNPS
            </h1>
          </div>
          <div>
            <p class="text-center font-bevnpro text-base/[1.0]">
              Tải xuống GDVNPS cho Windows, Android, iOS.
            </p>
          </div>
        </div>
      </section>
    </main>
    <section
      class="mx-12 rounded-lg border-[rgba(15,23,51,0.3)] bg-slate-900/[0.2] shadow-[0,4px,30px,rgba(0,0,0,0.1)] backdrop-blur-[5px]"
    >
      <div
        class="mx-5 mt-4 rounded-xl bg-gradient-to-tr from-amber-400 to-red-600 p-5"
      >
        <div class="flex flex-col items-center justify-center p-1.5">
          <h2 class="text-3xl font-semibold">GDVNPS latest</h2>
          <div class="flex">
            <p>Có sẵn cho:</p>
            <div class="flex pl-1">
              <span class="p-1">
                <i class="pi pi-microsoft" title="Windows"></i>
              </span>
              <span class="p-1">
                <i class="pi pi-android" title="Android"></i>
              </span>
              <span class="p-1">
                <i class="pi pi-apple" title="iPhone"></i>
              </span>
            </div>
          </div>
        </div>
        <div class="mt-1 flex justify-center">
          <a
            href="https://github.com/TacoEnjoyer/gdvnps/releases/latest"
            class="w-fit cursor-pointer rounded-lg border-2 border-gray-800 px-14 py-4 duration-200 hover:border-gray-600"
          >
            <div>
              <div class="flex justify-center pb-0.5">
                <i class="pi pi-github" style="font-size: 50px"></i>
              </div>
              <h3 class="text-center text-2xl font-medium">Github</h3>
            </div>
          </a>
        </div>
      </div>
      <div
        class="mx-5 mt-4 rounded-xl bg-gradient-to-tr from-violet-500 to-slate-800 p-5"
      >
        <div class="flex flex-col items-center justify-center p-1.5">
          <h2 class="text-3xl font-semibold">GDVNPS Android Geode</h2>
          <div class="flex">
            <p>Có sẵn cho:</p>
            <div class="flex pl-1">
              <span class="p-1">
                <i class="pi pi-android" title="Android"></i>
              </span>
            </div>
          </div>
        </div>
        <div class="mt-1 flex justify-center">
          <a
            href="https://github.com/TacoEnjoyer/gdvnps/releases/download/geode/Geode.GDVNPS_signed.apk"
            class="w-fit cursor-pointer rounded-lg border-2 border-gray-800 px-16 py-4 duration-200 hover:border-gray-600"
          >
            <div>
              <div class="flex justify-center pb-0.5">
                <i class="pi pi-github" style="font-size: 50px"></i>
              </div>
              <h3 class="text-center text-2xl font-medium">Github</h3>
            </div>
          </a>
        </div>
      </div>
    </section>
    <CircleBG />
    <BlurBG />
  </div>
</Layout>
